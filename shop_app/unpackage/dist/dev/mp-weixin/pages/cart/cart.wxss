
.container {
    padding-bottom: 60px;
}
.cart-item {
    display: flex;
    padding: 10px;
    background-color: #fff;
    margin-bottom: 10px;
    align-items: center;
}
.product-img {
    width: 80px;
    height: 80px;
    margin-right: 10px;
}
.product-info {
    flex: 1;
}
.product-name {
    font-size: 14px;
    margin-bottom: 5px;
}
.product-price {
    color: #ff0000;
    font-weight: bold;
    margin-bottom: 5px;
}
.quantity-control {
    display: flex;
    align-items: center;
}
.btn-minus,
.btn-plus {
    width: 25px;
    height: 25px;
    border: 1px solid #ccc;
    display: flex;
    align-items: center;
    justify-content: center;
}
.quantity {
    margin: 0 10px;
}
.delete-btn {
    color: #ff0000;
    margin-left: 10px;
}
.footer {
    position: fixed;
    bottom: 50px;
    left: 0;
    right: 0;
    height: 50px;
    background-color: #fff;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 15px;
    border-top: 1px solid #eee;
}

/* bottom 50px because of tabbar */
.total-price {
    color: #ff0000;
    font-weight: bold;
    font-size: 18px;
}
.checkout-btn {
    background-color: #ff0000;
    color: #fff;
    padding: 10px 20px;
    border-radius: 20px;
}
.login-prompt {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100vh;
    padding: 20px;
}
.prompt-icon {
    font-size: 64px;
    margin-bottom: 20px;
}
.prompt-text {
    font-size: 18px;
    color: #333;
    margin-bottom: 30px;
}
.login-btn {
    background-color: #3cc51f;
    color: #fff;
    padding: 15px 40px;
    border-radius: 6px;
}
.empty-cart {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 100px 20px;
}
.empty-icon {
    font-size: 64px;
    margin-bottom: 20px;
}
.empty-text {
    font-size: 16px;
    color: #999;
}
